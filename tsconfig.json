{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests"],
  "exclude": ["node_modules", "dist", "tests"]
}
